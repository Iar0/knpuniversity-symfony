{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
        </tr>
        </thead>
        <tbody>
            {% for genus in genuses %}
                <tr>
                    <th>{{ genus.name }}</th>
                    <th>{{ genus.speciesCount }}</th>
                    <th>{{ genus.updatedAt|date('Y-m-d') }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}