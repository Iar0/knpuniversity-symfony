{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
        </tr>
        </thead>
        <tbody>
            {% for genus in genuses %}
                <tr>
                    <th>
                        <a href="{{ path("genus_show", { 'genusName': genus.name}) }}">
                            {{ genus.name }}
                        </a>
                    </th>
                    <th>{{ genus.speciesCount }}</th>
                    <th>{{ genus.updatedAt|date('Y-m-d') }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}